<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:awe="http://schemas.awesomium.com/winfx" x:Class="EpochLauncher.UpdatePromptWindow"
        Title="Update Available" Height="150" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="238*"/>
            <ColumnDefinition Width="163*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Height="44" TextWrapping="Wrap" Text="An update is available. Would you like to apply it now?" VerticalAlignment="Top" Width="303" Margin="15,17,0,0" Grid.ColumnSpan="2"/>
        <Button Content="Yes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="15,66,0,0" Click="Button_Click"/>
        <Button Content="No" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Grid.Column="1" Margin="40,66,0,0" Click="Button_Click_1"/>

    </Grid>
</Window>
